<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/menuFragment2">
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.whayway.beerrandom.game.GameFragment"
        android:label="GameFragment" >
        <action
            android:id="@+id/action_gameFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment2"
        android:name="com.whayway.beerrandom.fragments.MenuFragment"
        android:label="MenuFragment" >
        <action
            android:id="@+id/action_menuFragment2_to_entranceFragment2"
            app:destination="@id/entranceFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.whayway.beerrandom.fragments.ResultFragment"
        android:label="ResultFragment" >
        <argument
            android:name="score"
            app:argType="integer" />
        <action
            android:id="@+id/action_resultFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/instructionFragment"
        android:name="com.whayway.beerrandom.fragments.InstructionFragment"
        android:label="InstructionFragment" >
        <action
            android:id="@+id/action_instructionFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/entranceFragment"
        android:name="com.whayway.beerrandom.fragments.EntranceFragment"
        android:label="fragment_entrance"
        tools:layout="@layout/fragment_entrance" >
        <action
            android:id="@+id/action_entranceFragment_to_instructionFragment"
            app:destination="@id/instructionFragment" />
    </fragment>
</navigation>